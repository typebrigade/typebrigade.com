h1 Blog

ul.blog-list
  for article, slug in public.blog._data
    unless article.published === false
      li.blog-item
        a(href="/blog/#{ slug }")
          time(datetime="#{ new Date(article.date) }")
            span.a-faux= article.date
          h2
            span.a-faux #{ article.title }
          if service.disqus
            a(href="/blog/#{ article.slug }#disqus_thread") Comments
      -limit--
      if limit === 0
        -break

