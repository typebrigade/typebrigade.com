{
  "name": "typebrigade.com",
  "version": "0.1.0",
  "description": "Vancouver’s type design and typography speaker series meetup.",
  "homepage": "http://typebrigade.com",
  "author": "Kenneth Ormandy <kenneth@typebrigade.com>",
  "repository": "git@github.com:typebrigade/typebrigade.com.git",
  "keywords": [
    "type",
    "typography",
    "fonts",
    "design",
    "meetup"
  ],
  "private": true,
  "scripts": {
    "postinstall": "mv node_modules/*.css node_modules/*.scss",
    "test": "echo \"Error: no test specified…yet! Pull requests on typetester/typetester.com are greatly appriciated.\" && exit 1",
    "start": "harp server",
    "compile": "harp compile . ~/Dropbox/harp.io/apps/typebrigade.harp.io/public && rm -rf ~/Dropbox/harp.io/apps/typebrigade.harp.io/public/node_modules",
    "typogrify": "typogr -f ~/Dropbox/harp.io/apps/typebrigade.harp.io/public/*.html ~/Dropbox/harp.io/apps/typebrigade.harp.io/public/",
    "prefix": "autoprefixer ~/Dropbox/harp.io/apps/typebrigade.harp.io/public/css/main.css",
    "deploy": "npm run compile && npm run typogrify && npm run prefix"
  },
  "devDependencies": {
    "autoprefixer": "~1.2.0",
    "bourbon": "git://github.com/thoughtbot/bourbon#v3.2.2",
    "chasers": "git://github.com/kennethormandy/chasers#v0.2.1",
    "neat": "git://github.com/kennethormandy/neat#v1.5.2",
    "normalize-opentype": "git://github.com/kennethormandy/normalize-opentype.css#v0.1.2",
    "typogr": "~0.6.4"
  }
}
