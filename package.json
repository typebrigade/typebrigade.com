{
  "name": "typebrigade.com",
  "version": "0.1.0",
  "description": "Vancouver’s type design and typography speaker series meetup.",
  "homepage": "http://typebrigade.com",
  "author": "Kenneth Ormandy <kenneth@typebrigade.com>",
  "repository": "git@github.com:typebrigade/typebrigade.com.git",
  "private": true,
  "keywords": [
    "type",
    "typography",
    "fonts",
    "design",
    "meetup"
  ],
  "scripts": {
    "test":      "echo \"Error: no test specified…yet! Pull requests on typebrigade/typebrigade.com are greatly appriciated.\" && exit 1",
    "postinstall": "trash node_modules/chasers/test && trash node_modules/straight-up/test",
    "start":     "harp server",
    "typogrify": "typogr -f ./www/*.html ./www/",
    "compile":   "rm -rf ./www && harp compile && rm -rf ./www/node_modules/ && npm run typogrify",
    "stage":     "npm run compile && surge ./www --domain staging.typebrigade.com",
    "deploy":    "npm run compile && surge ./www --domain typebrigade.com"
  },
  "devDependencies": {
    "trash": "*",
    "chasers": "git://github.com/kennethormandy/chasers#v0.3.0",
    "normalize-opentype": "git://github.com/kennethormandy/normalize-opentype.css#v0.2.1",
    "straight-up": "git://github.com/kennethormandy/straight-up#v0.1.3",
    "surge": "~0.4.0",
    "typogr": "~0.6.4"
  }
}
