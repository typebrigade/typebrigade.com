{
  "name": "typebrigade.com",
  "version": "0.1.0",
  "description": "Vancouver’s type design and typography speaker series meetup.",
  "homepage": "http://typebrigade.com",
  "author": "Kenneth Ormandy <kenneth@typebrigade.com>",
  "contributors": [
    "Kenneth Ormandy <kenneth@typebrigade.com> (http://kennethormandy.com)",
    "Cody Jones      <cody@typebrigade.com>    (http://mediumjones.com)",
    "Andrea Husky    <andrea@typebrigade.com>  (http://andreahusky.com)",
    "Riley Cran      <riley@typebrigade.com>   (http://rileycran.com)",
    "Alanna Munro    <alanna@typebrigade.com>  (http://alannamun.com)"
  ],
  "repository": "git@github.com:typebrigade/typebrigade.com.git",
  "private": true,
  "keywords": [
    "type",
    "typography",
    "fonts",
    "design",
    "meetup"
  ],
  "scripts": {
    "postinstall": "trash --force node_modules/bourbon-neat/test && cp ./node_modules/normalize.css/normalize.css ./node_modules/normalize.css/normalize.scss && cat ./_includes/prefix.jade ./node_modules/typogr/typogr.min.js | tr -d \"\r\n\" > ./node_modules/typogr/typogr.jade",
    "test": "echo \"Error: no test specified…yet! Pull requests on typebrigade/typebrigade.com are greatly appriciated.\"",
    "start": "harp server",
    "compile": "harp compile && trash --force ./www/node_modules/",
    "stage": "npm run compile && surge ./www --domain staging.typebrigade.com",
    "deploy": "npm run compile && surge ./www --domain typebrigade.com"
  },
  "devDependencies": {
    "bourbon": "4.2.3",
    "bourbon-neat": "1.7.2",
    "chasers": "git://github.com/kennethormandy/chasers#v0.3.0",
    "figment": "kennethormandy/figment",
    "normalize-opentype.css": "0.2.4",
    "normalize.css": "3.0.3",
    "surge": "latest",
    "trash": "1.4.1",
    "typogr": "0.6.5"
  }
}
